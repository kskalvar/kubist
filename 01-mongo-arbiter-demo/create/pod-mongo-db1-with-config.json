{
  "kind": "Pod",
  "apiVersion": "v1",
  "metadata": {
    "name": "mongo-db1",
    "labels": {
      "layer": "db",
	"name": "mongo-db1"
    }
  },
  "spec": {
     "containers": [
                {
                        "name": "mongo",
                        "image": "docker.io/mongo:3.2",
			"command": ["/entrypoint.sh"],
			"args": [
				"mongod",
				"--smallfiles",
				"--replSet=demoRS"
			],
                        "ports": [
                                {
                                  "hostPort": 27017,
                                  "containerPort": 27017
                                }
                        ],
 			"volumeMounts": [
         			{
                 			"name": "db-data",
                 			"mountPath": "/data/db"
         			}
 			]
                }
        ],
        "nodeSelector": {
          "node": "mongo-db1"
        },
	"volumes": [
         {
                 "name": "db-data",
                 "hostPath": {"path": "/data/db"}
         }
	],
        "restartPolicy": "Never"
  }
}
